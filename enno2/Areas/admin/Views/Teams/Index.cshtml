@model IEnumerable<enno2.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1><br>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">

    <div class="row container p-4">
        @foreach (var item in Model)
        {

            <div class="card col-lg-4 p-4" style="width: 20%;">

                <img src="~/uploads/@item.Image" class="card-img-top" alt="@item.Image">
                <div class="card-body">
                    <h5 class="card-title">@item.Name @item.Surname</h5>
                    <p class="card-text">@item.Position</p>
                </div>

                <div class="card-body">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="card-link">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="card-link">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="card-link">Delete</a>
                </div>

            </div>
        }
    </div>
        
 </table>
